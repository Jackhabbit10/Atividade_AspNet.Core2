@model AtividadeCidade.Models.Produto;


<h1 class="titulo-prod">Cadastrar Produto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarProduto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="nome_prod" class="control-label"></label>
                <input asp-for="nome_prod" class="form-control" />
                <span asp-validation-for="nome_prod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="descricao_prod" class="control-label"></label>
                <input asp-for="descricao_prod" class="form-control" />
                <span asp-validation-for="descricao_prod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="preco_prod" class="control-label"></label>
                <input asp-for="preco_prod" class="form-control" />
                <span asp-validation-for="preco_prod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="quantidade_prod" class="control-label"></label>
                <input asp-for="quantidade_prod" class="form-control" />
                <span asp-validation-for="quantidade_prod" class="text-danger"></span>
            </div>

            <div class="btn">
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-success">Voltar</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>
</div>

